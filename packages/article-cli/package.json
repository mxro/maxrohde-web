{
  "name": "article-cli",
  "version": "0.1.0",
  "sideEffects": false,
  "main": "src/articleCli.ts",
  "scripts": {
    "article": "ts-node --transpile-only src/main.ts",
    "build": "yarn clean && yarn compile",
    "clean": "rimraf dist/",
    "compile": "tsc -p tsconfig.json",
    "compile-watch": "tsc -p tsconfig.json --watch",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "deploy": "yarn node dist/src/template.js deploy $@",
    "infra": "yarn node dist/src/template.js infra",
    "test-ci": "GOLDSTACK_DEPLOYMENT=local jest --passWithNoTests --config=./jest.config.js --runInBand"
  },
  "dependencies": {
    "commander": "^9.4.0",
    "db-blog": "workspace:^",
    "dynamodb-toolbox": "^0.4.3",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "gray-matter": "^4.0.3",
    "html-to-text": "^8.2.1",
    "marked": "^4.0.18"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/html-to-text": "^8",
    "@types/jest": "^29.5.0",
    "@types/marked": "^4",
    "@types/node": "^20.8.9",
    "jest": "^29.5.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "packageManager": "yarn@3.2.2"
}
